<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bordas_bottom_shhet"
    android:backgroundTint="#FF131B22"

    tools:context=".Modais.Modal_cidade">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view6"
            android:layout_width="match_parent"
            android:layout_marginLeft="140dp"
            android:layout_marginRight="140dp"
            android:layout_marginTop="16dp"
            android:layout_height="3dp"
            android:background="@drawable/bordas_areedontadas"
            android:backgroundTint="@color/white"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="314dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:text="              Escolha uma Cidade"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/xcidade"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <ImageView
                android:id="@+id/xcidade"
                android:layout_width="36dp"
                android:layout_height="38dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>



        <EditText
            android:id="@+id/buscacidade"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/bordas_areedontadas"
            android:drawableLeft="@android:drawable/ic_menu_search"
            android:padding="10dp"
            android:textColorHint="@color/white"
            android:hint="Busque sua cidade...."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycidade"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buscacidade" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buton_cidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bordas_areedontadas"
            android:backgroundTint="@color/corpadrao"
            android:textColor="@color/white"
            android:layout_marginRight="24dp"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="24dp"
            android:text="Selecionar" />


    </LinearLayout>
</FrameLayout>